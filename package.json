{
  "name": "@waaark/luge",
  "version": "1.0.0-rc.1",
  "description": "Front-end animation plugin for uncreative developers",
  "author": "Antoine Wodniack <hello@wodniack.dev> (https://wodniack.dev)",
  "homepage": "https://luge.cool",
  "repository": {
    "type": "git",
    "url": "https://github.com/AntoineW/luge.git"
  },
  "bug": {
    "url": "https://github.com/AntoineW/luge/issues",
    "email": "hello@luge.cool"
  },
  "license": "GPL-3.0-only",
  "files": [
    "/dist"
  ],
  "sideEffects": false,
  "type": "module",
  "source": "src/js/luge.js",
  "exports": {
    "require": "./dist/js/luge.cjs",
    "default": "./dist/js/luge.modern.js"
  },
  "main": "./dist/js/luge.cjs",
  "module": "./dist/js/luge.module.js",
  "unpkg": "./dist/js/luge.umd.js",
  "scripts": {
    "build": "run-p build:*",
    "build:pkg": "microbundle --format modern,esm,cjs --define VERSION_WIN=%npm_package_version%,VERSION_BASH=$npm_package_version",
    "build:umd": "microbundle -i src/js/luge.umd.js --o ./dist/luge.umd.js --format umd --define VERSION_WIN=%npm_package_version%,VERSION_BASH=$npm_package_version",
    "build:scss": "run-s scss:build scss:postcss",
    "dev": "run-p dev:*",
    "dev:js": "microbundle watch --define VERSION_WIN=%npm_package_version%,VERSION_BASH=$npm_package_version",
    "dev:scss": "run-s scss:build scss:watch",
    "scss:build": "sass --style=compressed --no-source-map src/scss:dist/css",
    "scss:watch": "sass --watch src/scss:dist/css",
    "scss:postcss": "postcss -d dist/css/ dist/css/"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.9",
    "@studio-freight/lenis": "^1.0.42",
    "autoprefixer": "^10.4.17",
    "bowser": "^2.11.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.6"
  }
}
